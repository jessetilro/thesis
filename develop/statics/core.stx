  deriv(DEFAULT_VALUE(), DERIVATION()).
  deriv(DEFAULT_VALUE(), ABSTRACT()).
  deriv(NORMAL(), ABSTRACT()).
  deriv(DERIVATION(), ABSTRACT()).
