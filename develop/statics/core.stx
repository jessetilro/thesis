  derivLub(ABSTRACT(), X) = ABSTRACT().
  derivLub(X, ABSTRACT()) = ABSTRACT().
  derivLub(NORMAL(), DERIVATION()) = ABSTRACT().
  derivLub(DERIVATION(), NORMAL()) = ABSTRACT().
  
